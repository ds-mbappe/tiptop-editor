    "@tiptap/extensions": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "@tiptap/suggestion": "^3.0.9",
    "framer-motion": "^12.23.12",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.536.0"
